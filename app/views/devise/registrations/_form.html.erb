<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div>
    <%= f.text_field :first_name, placeholder: "First name", class: "phxxxs pvxxxs fsxxxs full-width" %>
  </div>
  <div class="mtxs">
    <%= f.text_field :last_name, placeholder: "Last name", class: "phxxxs pvxxxs fsxxxs full-width" %>
  </div>
  <div class="mtxs">
    <%= f.email_field :email, placeholder: "Email address", class: "phxxxs pvxxxs fsxxxs full-width" %>
  </div>
  <div class="mtxs">
    <%= f.password_field :password, placeholder: "Password", class: "phxxxs pvxxxs fsxxxs full-width", autocomplete: "off" %>
  </div>
  <div class="mtxs">
    <%= f.password_field :password_confirmation, placeholder: "Password confirmation", class: "phxxxs pvxxxs fsxxxs full-width", autocomplete: "off" %>
  </div>
  <div class="row nmhxs">
    <div class="col-sm-6 col-sm-offset-6 phxs mtxs">
      <%= f.submit "sign in", class: "btn btn-primary fsxxxs fwl pvxxxs full-width" %>
    </div>
  </div>
<% end %>