<div class="container phxs">
  <div class="row nmhxs mtm">
    <div class="col-sm-8 phxs">
      <div class="pas bg-16 fwl bss bwhs bwts bwbm bc-2">
        <div class="fwm pull-right">
          <%= pluralize(@tag.quotes.count, "quote") %>
        </div>
        <%= @tag.name %>
      </div>
      <div class="mtxxxs">
        <% @tag.quotes.order("posts_count desc").each do |quote| %>
          <div class="mtxxxs-plus phs pvxs bg-16 bss bwhs bwts bwbm bc-2">
            <div class="fsxs c-2 lhxs">
              <i class="icon-leftquote c-10"></i>
                <%= quote.text %>
              <i class="icon-rightquote c-10"></i>
            </div>
            <div class="row nmhxxs mtxxxs fss fwl">
              <div class="col-xs-6 phxxs">
                <table>
                  <tr>
                    <td class="plxxs-plus">
                      <%= form_for :post, url: posts_path do |f| %>
                        <%= f.hidden_field :quote_id, value: quote.id %>
                        <%= button_tag data: { confirm: "Are you sure you want to post this quote?" }, title: "Quote", class: "c-teal bg-n pan" do %>
                          <i class="fa fa-comment"></i>
                        <% end %>
                        <%= quote.posts_count %>
                      <% end %>
                    </td>
                  </tr>
                </table>
              </div>
              <div class="col-xs-6 phxxs text-right">
                <%= link_to send("#{quote.citable_type.underscore}_path", quote.citable.slug), class: "c-teal" do %>
                  <span class="js-post-name"><%= quote.name %></span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-4 phxs">
    </div>
  </div>
</div>
